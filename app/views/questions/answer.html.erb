
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">

      <h1 class="display-4 mb-3">Stupid coaching</h1>

      <div class="card border-0">
        <div class="card-body" style="border-left: 0.5rem solid #1c4966;border-bottom: none;border-top: none;border-right: none;">
          <blockquote class="blockquote mb-0">
            <p><%= @question %></p>
            <footer class="blockquote-footer">You</cite></footer>
          </blockquote>
        </div>
      </div>

      <div class="card border-0 mt-4 mb-4">
        <div class="card-body" style="background-color:#f7e4c6;border-left: 0.5rem solid #1c4966;">
          <blockquote class="blockquote mb-0">
            <% if @question[-1] == '?' %>
              <p>Silly question, get dressed and go to work!</p>
            <% elsif @question == 'I am going to work' %>
              <p>Great!</p>
            <% else %>
              <p>I don't care, get dressed and go to work!</p>
            <% end %>
            <footer class="blockquote-footer">Your coach</cite></footer>
          </blockquote>
        </div>
      </div>

      <%= link_to "Ask a new question", "/ask", class:"link-primary mt-5" %>

    </div>
  </div>
</div>
